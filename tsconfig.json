{
	"compilerOptions": {
		"jsx": "react",
		"target": "es2017",
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*"]
}
