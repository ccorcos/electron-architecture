{
	"name": "electron-architecture",
	"version": "0.0.1",
	"description": "A minimal Electron application written with Typescript",
	"scripts": {
		"clean": "rm -rf build",
		"build": "tsx src/tools/buildSrc.ts",
		"watch": "tsx src/tools/buildSrc.ts --watch",
		"typecheck": "tsc --noEmit",
		"test:unit": "mocha -r tsx 'src/**/*.test.ts' --verbose",
		"test:e2e": "playwright test",
		"test": "run-s test:unit test:e2e",
		"start": "electron build/main.js"
	},
	"repository": "https://github.com/ccorcos/electron-architecture",
	"devDependencies": {
		"@playwright/test": "^1.27.1",
		"@types/cpx": "^1.5.2",
		"@types/fs-extra": "^9.0.13",
		"@types/lodash": "^4.14.171",
		"@types/mocha": "whitecolor/mocha-types",
		"@types/react": "^18.0.23",
		"@types/react-dom": "^18.0.7",
		"@types/ws": "^8.5.3",
		"@types/yargs": "^16.0.1",
		"cpx": "^1.5.0",
		"electron": "^13.1.7",
		"eslint": "^7.31.0",
		"estrella": "^1.4.1",
		"fs-extra": "^10.1.0",
		"mocha": "^8.4.0",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.27.1",
		"tsx": "^3.11.0",
		"typescript": "^4.8.0",
		"ws": "^8.10.0",
		"yargs": "^17.0.1"
	},
	"dependencies": {
		"lodash": "^4.17.21",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	}
}
