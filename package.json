{
	"name": "electron-quick-start-typescript",
	"version": "1.0.0",
	"description": "A minimal Electron application written with Typescript",
	"scripts": {
		"build": "tsx src/tools/buildSrc.ts",
		"watch": "tsc --noEmit -w",
		"test": "mocha './build/**/*.test.js' --verbose",
		"lint": "eslint -c .eslintrc --ext .ts ./src",
		"start": "electron ./build/main/main.js"
	},
	"repository": "https://github.com/electron/electron-quick-start-typescript",
	"keywords": [
		"Electron",
		"quick",
		"start",
		"tutorial",
		"demo",
		"typescript"
	],
	"author": "GitHub",
	"license": "CC0-1.0",
	"devDependencies": {
		"@types/cpx": "^1.5.2",
		"@types/lodash": "^4.14.171",
		"@types/mocha": "whitecolor/mocha-types",
		"@types/yargs": "^17.0.13",
		"cpx": "^1.5.0",
		"electron": "^13.1.7",
		"eslint": "^7.31.0",
		"estrella": "^1.4.1",
		"mocha": "^8.4.0",
		"tsx": "^3.11.0",
		"typescript": "^4.8.0",
		"yargs": "^17.6.0"
	},
	"dependencies": {
		"lodash": "^4.17.21"
	}
}
